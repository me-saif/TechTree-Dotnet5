@using Microsoft.AspNetCore.Identity
@using TechTreeMVCWebApplication.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
<li class="nav-item dropdown show">
    <a class="btn dropdown-toggle nav-link text-dark" href="#" data-toggle="dropdown">Admin</a>
    <div class="dropdown-menu">
        <a class="dropdown-item" asp-area="Admin" asp-action="Index" asp-controller="Category">Categories</a>
        <a class="dropdown-item" href="#">Users to Categories</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-area="Admin" asp-action="Index" asp-controller="MediaType">Media Types</a>
    </div>
</li>
}